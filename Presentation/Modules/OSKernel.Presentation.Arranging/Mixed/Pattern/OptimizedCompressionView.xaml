<UserControl x:Class="OSKernel.Presentation.Arranging.Mixed.Pattern.OptimizedCompressionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OSKernel.Presentation.Arranging.Mixed.Pattern"
             mc:Ignorable="d">
    <!--课位压缩优化-->
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="排课结果"
                       Opacity="0.7"
                       VerticalAlignment="Center" />
            <ComboBox MinWidth="220"
                      DisplayMemberPath="Name"
                      ItemsSource="{Binding Results}"
                      SelectedItem="{Binding SelectResult}" />
        </StackPanel>
    </Grid>
</UserControl>
