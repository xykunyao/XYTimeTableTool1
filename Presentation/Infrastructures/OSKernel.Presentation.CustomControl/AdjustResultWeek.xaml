<UserControl x:Class="OSKernel.Presentation.CustomControl.AdjustResultWeek"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OSKernel.Presentation.CustomControl"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <!--调整结果周课表-->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="120" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--列头-->
            <Border BorderThickness="1,1,1,1"
                    BorderBrush="{StaticResource main_lightgroud}">
                <TextBlock Text="课节"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>

            <Border BorderThickness="0,1,1,1"
                    Grid.Column="1"
                    BorderBrush="{StaticResource main_lightgroud}">
                <TextBlock Text="星期一"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>

            <Border BorderThickness="0,1,1,1"
                    Grid.Column="2"
                    BorderBrush="{StaticResource main_lightgroud}">
                <TextBlock Text="星期二"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>

            <Border BorderThickness="0,1,1,1"
                    Grid.Column="3"
                    BorderBrush="{StaticResource main_lightgroud}">
                <TextBlock Text="星期三"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>

            <Border BorderThickness="0,1,1,1"
                    Grid.Column="4"
                    BorderBrush="{StaticResource main_lightgroud}">
                <TextBlock Text="星期四"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>

            <Border BorderThickness="0,1,1,1"
                    Grid.Column="5"
                    BorderBrush="{StaticResource main_lightgroud}">
                <TextBlock Text="星期五"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>

            <Border BorderThickness="0,1,1,1"
                    Grid.Column="6"
                    BorderBrush="{StaticResource main_lightgroud}">
                <TextBlock Text="星期六"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>

            <Border BorderThickness="0,1,1,1"
                    Grid.Column="7"
                    BorderBrush="{StaticResource main_lightgroud}">
                <TextBlock Text="星期日"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>

            <!--内容行-->
            <ItemsControl Grid.Row="1"
                          Name="itemControl_period"
                          Grid.ColumnSpan="8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid MinHeight="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="120" />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--默认-->
                            <Border BorderThickness="1,0,1,1"
                                    Name="border_norml"
                                    BorderBrush="{StaticResource main_lightgroud}">
                                <Grid>
                                    <TextBlock Text="{Binding Period.PeriodName}"
                                               Margin="15,5"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </Border>

                            <!--禁用-->
                            <Border Grid.Column="1"
                                    Grid.ColumnSpan="7"
                                    Visibility="Collapsed"
                                    Panel.ZIndex="1"
                                    Name="border_forbid"
                                    Background="{StaticResource week_forbid}"
                                    BorderBrush="{StaticResource main_lightgroud}" />

                            <Border BorderThickness="0,0,1,1"
                                    Grid.Column="1"
                                    BorderBrush="{StaticResource main_lightgroud}">
                                <ContentControl Content="{Binding Monday}"/>
                            </Border>

                            <Border BorderThickness="0,0,1,1"
                                    Grid.Column="2"
                                    BorderBrush="{StaticResource main_lightgroud}">
                                <ContentControl Content="{Binding Tuesday}" />
                            </Border>

                            <Border BorderThickness="0,0,1,1"
                                    Grid.Column="3"
                                    BorderBrush="{StaticResource main_lightgroud}">
                                <ContentControl Content="{Binding Wednesday}" />
                            </Border>

                            <Border BorderThickness="0,0,1,1"
                                    Grid.Column="4"
                                    BorderBrush="{StaticResource main_lightgroud}">
                                <ContentControl Content="{Binding Thursday}" />
                            </Border>

                            <Border BorderThickness="0,0,1,1"
                                    Grid.Column="5"
                                    BorderBrush="{StaticResource main_lightgroud}">
                                <ContentControl Content="{Binding Friday}" />
                            </Border>

                            <Border BorderThickness="0,0,1,1"
                                    Grid.Column="6"
                                    BorderBrush="{StaticResource main_lightgroud}">
                                <ContentControl Content="{Binding Saturday}" />
                            </Border>

                            <Border BorderThickness="0,0,1,1"
                                    Grid.Column="7"
                                    BorderBrush="{StaticResource main_lightgroud}">
                                <ContentControl Content="{Binding Sunday}" />
                            </Border>

                        </Grid>
                        <DataTemplate.Triggers>
                            <!--午休-->
                            <DataTrigger Binding="{Binding PositionType}"
                                         Value="Noon">
                                <DataTrigger.Setters>
                                    <Setter Property="Visibility"
                                            TargetName="border_forbid"
                                            Value="Visible" />
                                </DataTrigger.Setters>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding PositionType}"
                                         Value="AB">
                                <DataTrigger.Setters>
                                    <Setter Property="Visibility"
                                            TargetName="border_forbid"
                                            Value="Visible" />
                                </DataTrigger.Setters>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding PositionType}"
                                         Value="PB">
                                <DataTrigger.Setters>
                                    <Setter Property="Visibility"
                                            TargetName="border_forbid"
                                            Value="Visible" />
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </Grid>
    </ScrollViewer>

</UserControl>
