                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsChecked}"
                                         Value="True">
                                <Setter Property="Background"
                                        TargetName="bg"
                                        Value="{DynamicResource local_green}" />
                                <Setter Property="Visibility"
                                        Value="Visible"
                                        TargetName="path_check" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsChecked}"
                                         Value="False">
                                <!--<Setter Property="Visibility"
                                        Value="Visible"
                                        TargetName="path_uncheck" />-->
