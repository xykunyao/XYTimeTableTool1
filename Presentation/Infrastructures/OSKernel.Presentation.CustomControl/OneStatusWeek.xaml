                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <ScrollViewer Grid.Row="1">
        <Grid Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="120" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--列头-->
                <Border BorderThickness="1,1,1,1"
                        BorderBrush="{StaticResource CB_Separation}">
                    <TextBlock Text="课节"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Border>

                <Border BorderThickness="0,1,1,1"
                        Grid.Column="1"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown1"
                        BorderBrush="{StaticResource CB_Separation}">
                    <TextBlock Text="星期一"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Border>

                <Border BorderThickness="0,1,1,1"
                        Grid.Column="2"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown2"
                        BorderBrush="{StaticResource CB_Separation}">
                    <TextBlock Text="星期二"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Border>

                <Border BorderThickness="0,1,1,1"
                        Grid.Column="3"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown3"
                        BorderBrush="{StaticResource CB_Separation}">
                    <TextBlock Text="星期三"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Border>

                <Border BorderThickness="0,1,1,1"
                        Grid.Column="4"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown4"
                        BorderBrush="{StaticResource CB_Separation}">
                    <TextBlock Text="星期四"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Border>

                <Border BorderThickness="0,1,1,1"
                        Grid.Column="5"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown5"
                        BorderBrush="{StaticResource CB_Separation}">
                    <TextBlock Text="星期五"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Border>

                <Border BorderThickness="0,1,1,1"
                        Grid.Column="6"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown6"
                        BorderBrush="{StaticResource CB_Separation}">
                    <TextBlock Text="星期六"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Border>

                <Border BorderThickness="0,1,1,1"
                        Grid.Column="7"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown7"
                        BorderBrush="{StaticResource CB_Separation}">
                    <TextBlock Text="星期日"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Border>

                <!--内容行-->
                <ItemsControl Grid.Row="1"
                              Name="itemControl_period"
                              Grid.ColumnSpan="8">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="120" />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <!--默认-->
                                <Border BorderThickness="1,0,1,1"
                                        Name="border_norml"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="Border_norml_MouseLeftButtonDown"
                                        BorderBrush="{StaticResource CB_Separation}">
                                    <Grid>
                                        <TextBlock Text="{Binding Period.PeriodName}"
                                                   Margin="15,5"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                    </Grid>
                                </Border>

                                <!--禁用-->
                                <Border Grid.Column="1"
                                        Grid.ColumnSpan="7"
                                        Visibility="Collapsed"
                                        Panel.ZIndex="1"
                                        Name="border_forbid"
                                        Background="{StaticResource week_forbid}"
                                        BorderBrush="{StaticResource CB_Separation}" />

                                <Border BorderThickness="0,0,1,1"
                                        Grid.Column="1"
                                        BorderBrush="{StaticResource CB_Separation}">
                                    <CheckBox IsChecked="{Binding IsChecked}"
                                              DataContext="{Binding Monday}"
                                              Style="{StaticResource timeCheckBox}" />
                                </Border>

                                <Border BorderThickness="0,0,1,1"
                                        Grid.Column="2"
                                        BorderBrush="{StaticResource CB_Separation}">
                                    <CheckBox IsChecked="{Binding IsChecked}"
                                              DataContext="{Binding Tuesday}"
                                              Style="{StaticResource timeCheckBox}" />
                                </Border>

                                <Border BorderThickness="0,0,1,1"
                                        Grid.Column="3"
                                        BorderBrush="{StaticResource CB_Separation}">
                                    <CheckBox IsChecked="{Binding IsChecked}"
                                              DataContext="{Binding Wednesday}"
                                              Style="{StaticResource timeCheckBox}" />
                                </Border>

                                <Border BorderThickness="0,0,1,1"
                                        Grid.Column="4"
                                        BorderBrush="{StaticResource CB_Separation}">
                                    <CheckBox IsChecked="{Binding IsChecked}"
                                              DataContext="{Binding Thursday}"
                                              Style="{StaticResource timeCheckBox}" />
                                </Border>

                                <Border BorderThickness="0,0,1,1"
                                        Grid.Column="5"
                                        BorderBrush="{StaticResource CB_Separation}">
                                    <CheckBox IsChecked="{Binding IsChecked}"
                                              DataContext="{Binding Friday}"
                                              Style="{StaticResource timeCheckBox}" />
                                </Border>

                                <Border BorderThickness="0,0,1,1"
                                        Grid.Column="6"
                                        BorderBrush="{StaticResource CB_Separation}">
                                    <CheckBox IsChecked="{Binding IsChecked}"
                                              DataContext="{Binding Saturday}"
                                              Style="{StaticResource timeCheckBox}" />
                                </Border>

                                <Border BorderThickness="0,0,1,1"
                                        Grid.Column="7"
                                        BorderBrush="{StaticResource CB_Separation}">
                                    <CheckBox IsChecked="{Binding IsChecked}"
                                              DataContext="{Binding Sunday}"
                                              Style="{StaticResource timeCheckBox}" />
                                </Border>

                            </Grid>
                            <DataTemplate.Triggers>
                                <!--午休-->
                                <DataTrigger Binding="{Binding PositionType}"
                                             Value="Noon">
                                    <DataTrigger.Setters>
                                        <Setter Property="Visibility"
                                                TargetName="border_forbid"
                                                Value="Visible" />
                                    </DataTrigger.Setters>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PositionType}"
                                             Value="AB">
                                    <DataTrigger.Setters>
                                        <Setter Property="Visibility"
                                                TargetName="border_forbid"
                                                Value="Visible" />
                                    </DataTrigger.Setters>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PositionType}"
                                             Value="PB">
                                    <DataTrigger.Setters>
                                        <Setter Property="Visibility"
                                                TargetName="border_forbid"
                                                Value="Visible" />
                                    </DataTrigger.Setters>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
